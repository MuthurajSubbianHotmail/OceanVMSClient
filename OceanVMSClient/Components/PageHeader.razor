@* <MudPaper Square="true" Elevation="0" Class="page-header px-3" @attributes="AdditionalAttributes"> *@
    <div class="header-inner">
        <div class="header-left">
            @if (!string.IsNullOrWhiteSpace(Icon))
            {
                <MudIcon Icon="@Icon" Size="Size.Medium" Class="header-icon" />
            }
            <div class="header-texts">
                <MudText Typo="Typo.h6" Class="title">@Title</MudText>
                @if (!string.IsNullOrWhiteSpace(Subtitle))
                {
                    <MudText Typo="Typo.caption" Class="subtitle">@Subtitle</MudText>
                }
            </div>
        </div>

        <div class="header-right">
            @RightContent
        </div>
    </div>
@* </MudPaper> *@
