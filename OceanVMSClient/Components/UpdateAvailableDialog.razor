@using MudBlazor

<MudDialog>
    <MudDialogTitle>Update available</MudDialogTitle>

    <MudDialogContent>
        <div>
            <strong>Current:</strong> v@BootVersion
        </div>
        <div>
            <strong>Available:</strong> v@LatestVersion
        </div>
        <div class="mt-2">
            A new version is available. Refresh now to load the latest changes.
        </div>
    </MudDialogContent>

    <MudDialogActions>
        <MudButton Color="Color.Primary" OnClick="() => Close(true)">Refresh</MudButton>
        <MudButton Variant="Variant.Text" OnClick="() => Close(false)">Later</MudButton>
    </MudDialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; } = default!;
    [Parameter] public string? BootVersion { get; set; }
    [Parameter] public string? LatestVersion { get; set; }

    private void Close(bool refresh)
    {
        MudDialog.Close(DialogResult.Ok(refresh));
    }
}
