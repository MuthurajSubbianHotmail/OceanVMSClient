@page "/change-password"
@using MudBlazor

<div class="login-page">
    <div class="card login-card">
        <div class="login-brand">
            <h1>Change password</h1>
            <div style="font-size:0.85rem;opacity:.95">Update your account password</div>
        </div>

        <div class="login-body">
            @if (!string.IsNullOrWhiteSpace(StatusMessage))
            {
                <div class="alert @(IsSuccess ? "alert-success" : "alert-danger")" role="alert">
                    <p class="mb-0">@StatusMessage</p>
                </div>
            }

            <EditForm Model="_model" OnValidSubmit="HandleSubmit" class="card card-body bg-light mt-4">
                <DataAnnotationsValidator />
                <ValidationSummary class="text-danger" />

                <div class="mb-3">
                    <MudTextField T="string"
                                  @bind-Value="_model.CurrentPassword"
                                  Label="Current password"
                                  Class="w-100"
                                  InputType="@(showCurrent ? InputType.Text : InputType.Password)"
                                  Adornment="Adornment.End"
                                  AdornmentIcon="@(showCurrent ? Icons.Material.Filled.Visibility : Icons.Material.Filled.VisibilityOff)"
                                  OnAdornmentClick="ToggleShowCurrent"
                                  Immediate="true" />
                    <ValidationMessage For="@(() => _model.CurrentPassword)" />
                </div>

                <div class="mb-3">
                    <MudTextField T="string"
                                  @bind-Value="_model.NewPassword"
                                  Label="New password"
                                  Class="w-100"
                                  InputType="@(showNew ? InputType.Text : InputType.Password)"
                                  Adornment="Adornment.End"
                                  AdornmentIcon="@(showNew ? Icons.Material.Filled.Visibility : Icons.Material.Filled.VisibilityOff)"
                                  OnAdornmentClick="ToggleShowNew"
                                  Immediate="true" />
                    <ValidationMessage For="@(() => _model.NewPassword)" />
                </div>

                <div class="mb-3">
                    <MudTextField T="string"
                                  @bind-Value="_model.ConfirmPassword"
                                  Label="Confirm new password"
                                  Class="w-100"
                                  InputType="@(showNew ? InputType.Text : InputType.Password)"
                                  Adornment="Adornment.End"
                                  AdornmentIcon="@(showNew ? Icons.Material.Filled.Visibility : Icons.Material.Filled.VisibilityOff)"
                                  OnAdornmentClick="ToggleShowNew"
                                  Immediate="true" />
                    <ValidationMessage For="@(() => _model.ConfirmPassword)" />
                </div>

                <div class="d-grid">
                    <button class="btn btn-primary btn-lg" type="submit" disabled="@isSubmitting">
                        @if (isSubmitting)
                        {
                            <MudProgressCircular Size="Size.Small" Indeterminate="true" Class="me-2" Color="Color.Inherit" />
                            <span>Updating...</span>
                        }
                        else
                        {
                            <span>Change password</span>
                        }
                    </button>
                </div>
            </EditForm>

            <div class="text-center mt-3 small text-muted">
                <a href="/login">Back to sign in</a>
            </div>
        </div>
    </div>
</div>