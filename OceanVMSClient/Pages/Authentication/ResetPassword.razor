@page "/reset-password"

<div class="login-page">
    <div class="card login-card">
        <div class="login-brand">
            <h1>Reset password</h1>
            <div style="font-size:0.85rem;opacity:.95">Enter a new password for your account</div>
            @* Show the account being reset in the same branded header for clear context *@
            <div style="font-size:0.8rem; opacity:0.9; margin-top:0.35rem;">
                <span class="small text-white-50">Account:</span>
                <strong class="ms-1">@(!string.IsNullOrWhiteSpace(UserName) ? UserName : "(unknown)")</strong>
            </div>
        </div>

        <div class="login-body">
            @if (!string.IsNullOrWhiteSpace(StatusMessage))
            {
                <div class="alert @(IsSuccess ? "alert-success" : "alert-danger")" role="alert">
                    <p class="mb-0">@StatusMessage</p>
                </div>
            }

            <EditForm Model="_model" OnValidSubmit="HandleSubmit" class="card card-body bg-light mt-4">
                <DataAnnotationsValidator />
                <ValidationSummary class="text-danger" />

                <div class="mb-3">
                    <label class="form-label">New password</label>
                    <div class="input-group">
                        <span class="input-group-text bg-white border-end-0">
                            <!-- lock icon -->
                            <svg class="field-icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <rect x="3" y="11" width="18" height="10" rx="2" stroke="currentColor" stroke-width="1.5" />
                                <path d="M7 11V8a5 5 0 0110 0v3" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" />
                            </svg>
                        </span>

                        <InputText id="newPassword"
                                   class="form-control border-start-0"
                                   type="@(isShow ? "text" : "password")"
                                   @bind-Value="_model.Password" />

                        <button type="button" class="input-group-text password-toggle" @onclick="ButtonTestclick" title="Show / hide password">
                            @if (isShow)
                            {
                                <svg class="field-icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M2 12s4-7 10-7 10 7 10 7-4 7-10 7S2 12 2 12z" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                                    <circle cx="12" cy="12" r="3" stroke="currentColor" stroke-width="1.5" />
                                </svg>
                            }
                            else
                            {
                                <svg class="field-icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M3 3l18 18" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                                    <path d="M10.58 10.58A3 3 0 0113.42 13.42" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" />
                                    <path d="M2 12s4-7 10-7c2.11 0 4.06.515 5.78 1.4" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" />
                                    <path d="M21.2 16.2A16.94 16.94 0 0022 12s-4-7-10-7a9.77 9.77 0 00-3.4.6" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" />
                                </svg>
                            }
                        </button>
                    </div>
                    <ValidationMessage For="@(() => _model.Password)" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Confirm password</label>
                    <div class="input-group">
                        <span class="input-group-text bg-white border-end-0">
                            <svg class="field-icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <rect x="3" y="11" width="18" height="10" rx="2" stroke="currentColor" stroke-width="1.5" />
                                <path d="M7 11V8a5 5 0 0110 0v3" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" />
                            </svg>
                        </span>

                        <InputText id="confirmPassword"
                                   class="form-control border-start-0"
                                   type="@(isShow ? "text" : "password")"
                                   @bind-Value="_model.ConfirmPassword" />

                        <button type="button" class="input-group-text password-toggle" @onclick="ButtonTestclick" title="Show / hide password">
                            @if (isShow)
                            {
                                <svg class="field-icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M2 12s4-7 10-7 10 7 10 7-4 7-10 7S2 12 2 12z" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                                    <circle cx="12" cy="12" r="3" stroke="currentColor" stroke-width="1.5" />
                                </svg>
                            }
                            else
                            {
                                <svg class="field-icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M3 3l18 18" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                                    <path d="M10.58 10.58A3 3 0 0113.42 13.42" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" />
                                    <path d="M2 12s4-7 10-7c2.11 0 4.06.515 5.78 1.4" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" />
                                    <path d="M21.2 16.2A16.94 16.94 0 0022 12s-4-7-10-7a9.77 9.77 0 00-3.4.6" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" />
                                </svg>
                            }
                        </button>
                    </div>
                    <ValidationMessage For="@(() => _model.ConfirmPassword)" />
                </div>

                <div class="d-grid">
                    <button class="btn btn-primary btn-lg" type="button" disabled="@(isSubmitting || IsSuccess)" @onclick="SubmitClicked">
                        @if (isSubmitting)
                        {
                            <span>Resetting...</span>
                        }
                        else
                        {
                            <span>Reset password</span>
                        }
                    </button>
                </div>
            </EditForm>

            <div class="text-center mt-3 small text-muted">
                <a href="/login">Back to sign in</a>
            </div>
        </div>
    </div>
</div>

@code{
    bool isShow;
    void ButtonTestclick()
    {
        isShow = !isShow;
    }
}