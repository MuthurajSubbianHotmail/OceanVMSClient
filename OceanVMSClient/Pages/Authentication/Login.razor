@page "/login"
<div class="login-page">
    <div class="card login-card">
        <div class="login-brand">
            <h1>Ocean VMS</h1>
            <div style="font-size:0.85rem;opacity:.95">Welcome back — sign in to continue</div>
        </div>

        <div class="login-body">
            @if (ShowAuthError)
            {
                <div class="alert alert-danger" role="alert">
                    <p class="mb-0">@ErrorMessage</p>
                </div>
            }
            <EditForm Model="_userForAuthentication" OnValidSubmit="HandleSubmit" class="card card-body bg-light mt-5">
                <DataAnnotationsValidator />
                <ValidationSummary class="text-danger" />

                <div class="mb-3">
                    <label class="form-label">User name</label>
                    <div class="input-group">
                        <span class="input-group-text bg-white border-end-0">
                            <!-- user icon -->
                            <svg class="field-icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M12 12c2.761 0 5-2.239 5-5s-2.239-5-5-5-5 2.239-5 5 2.239 5 5 5z" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                                <path d="M20 21c0-3.866-3.582-7-8-7s-8 3.134-8 7" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                            </svg>
                        </span>
                        <InputText id="UserName" class="form-control border-start-0" @bind-Value="_userForAuthentication.UserName" />
                    </div>
                    <ValidationMessage For="@(() => _userForAuthentication.UserName)" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Password</label>
                    <div class="input-group">
                        <span class="input-group-text bg-white border-end-0">
                            <!-- lock icon -->
                            <svg class="field-icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <rect x="3" y="11" width="18" height="10" rx="2" stroke="currentColor" stroke-width="1.5" />
                                <path d="M7 11V8a5 5 0 0110 0v3" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" />
                            </svg>
                        </span>

                        <InputText id="password"
                                   class="form-control border-start-0"
                                   type="@PasswordInputType"
                                   @bind-Value="_userForAuthentication.Password" />

                        <button type="button" class="input-group-text password-toggle" @onclick="ToggleShowPassword" title="Show / hide password">
                            @if (showPassword)
                            {
                                <svg class="field-icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M2 12s4-7 10-7 10 7 10 7-4 7-10 7S2 12 2 12z" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                                    <circle cx="12" cy="12" r="3" stroke="currentColor" stroke-width="1.5" />
                                </svg>
                            }
                            else
                            {
                                <svg class="field-icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M3 3l18 18" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                                    <path d="M10.58 10.58A3 3 0 0113.42 13.42" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" />
                                    <path d="M2 12s4-7 10-7c2.11 0 4.06.515 5.78 1.4" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" />
                                    <path d="M21.2 16.2A16.94 16.94 0 0022 12s-4-7-10-7a9.77 9.77 0 00-3.4.6" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" />
                                </svg>
                            }
                        </button>
                    </div>
                    <ValidationMessage For="@(() => _userForAuthentication.Password)" />
                </div>

                <div class="d-flex justify-content-between align-items-center mb-3">
                    <div class="form-check">
                        <InputCheckbox id="remember" class="form-check-input" @bind-Value="rememberMe" />
                        <label class="form-check-label" for="remember">Remember me</label>
                    </div>
                    <a class="small" href="#">Forgot password?</a>
                </div>

                <div class="d-grid">
                    <button class="btn btn-primary btn-lg" type="submit" disabled="@isSubmitting">
                        @if (isSubmitting)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true">
                                Signing in...
                            </span>
                                                }
                        else
                        {
                            <span>Sign in</span>
                        }
                    </button>
                </div>
            </EditForm>

            <div class="text-center mt-3 small text-muted">
                By signing in you agree to the <a href="#" class="text-decoration-underline">terms</a>.
            </div>
        </div>
    </div>
</div>
