@page "/forgot-password"

<div class="forgot-page">
    <div class="card login-card">
        <div class="login-brand">
            <h1>Forgot password</h1>
            <div style="font-size:0.85rem;opacity:.95">Enter your account user id to receive reset instructions</div>
        </div>

        <div class="login-body">
            @if (!string.IsNullOrWhiteSpace(StatusMessage))
            {
                <div class="alert @(IsSuccess ? "alert-success" : "alert-danger")" role="alert">
                    <p class="mb-0">@StatusMessage</p>
                </div>
            }

            <EditForm Model="_model" OnValidSubmit="HandleSubmit" class="card card-body bg-light mt-4">
                <DataAnnotationsValidator />
                <ValidationSummary class="text-danger" />

                <div class="mb-3">
                    <label class="form-label">User ID</label>
                    <div class="input-group">
                        <span class="input-group-text bg-white border-end-0">
                            <svg class="field-icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M3 8l9 6 9-6" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                                <rect x="3" y="5" width="18" height="14" rx="2" stroke="currentColor" stroke-width="1.5" />
                            </svg>
                        </span>
                        <InputText id="UserName" class="form-control border-start-0" @bind-Value="_model.UserName" />
                    </div>
                    <ValidationMessage For="@(() => _model.UserName)" />
                </div>

                <div class="d-grid">
                    <button class="btn btn-primary btn-lg" type="submit" disabled="@isSubmitting">
                        @if (isSubmitting)
                        {
                            <span>Sending...</span>
                        }
                        else
                        {
                            <span>Send reset link</span>
                        }
                    </button>
                </div>
            </EditForm>

            <div class="text-center mt-3 small text-muted">
                <a href="/login">Back to sign in</a>
            </div>
        </div>
    </div>
</div>
