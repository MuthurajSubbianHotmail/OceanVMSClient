@page "/po-list"
@using System.Security.Claims
@using Microsoft.AspNetCore.Authorization
@using OceanVMSClient.Components
@using Shared.DTO.POModule

<MudTable Items="@_purchaseOrders"
          Hover="true" Breakpoint="Breakpoint.Sm" RightAlignSmall="true"
          >
    <HeaderContent>
        <MudTh>SAP PO Number</MudTh>
        <MudTh>Vendor</MudTh>
        <MudTh>Date</MudTh>
        <MudTh>Total Amount</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="SAP PO Number">@context.SAPPONumber</MudTd>
        <MudTd DataLabel="Vendor">@context.VendorName</MudTd>
        <MudTd DataLabel="Date">@context.SAPPODate.ToShortDateString()</MudTd>
        <MudTd DataLabel="Total Amount">@context.TotalValue.ToString("C")</MudTd>
    </RowTemplate>
    
</MudTable>

@code {
    private List<BreadcrumbItem> _breadcrumbItems = new List<BreadcrumbItem>
        {
            new BreadcrumbItem("Home", href: "/"),
            new BreadcrumbItem("Purchase Orders", href: ".", disabled: false)
        };

}