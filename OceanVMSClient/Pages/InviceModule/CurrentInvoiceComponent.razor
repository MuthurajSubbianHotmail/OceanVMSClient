@using Shared.DTO.POModule
@using SharedComp.Components
@using OceanVMSClient.SharedComp.Utils
<MudPaper Class="ps-0 pe-0">
<MudGrid GutterSize="2" AlignItems="Center" Spacing="1">
    <MudItem xs="12" sm="8" Class="field-block">
            <MudText Typo="Typo.subtitle2" Color="_labelColor">Inv No</MudText>
        <MudText Typo="Typo.body2" Color="Color.Info">@(InvoiceRefNo ?? "—")</MudText>
    </MudItem>

    <MudItem xs="12" sm="4" Class="field-block">
        <MudText Typo="Typo.subtitle2" Color="_labelColor">Inv Date</MudText>
        <MudText Typo="Typo.body2" Color="Color.Info">@((InvoiceDate.HasValue ? InvoiceDate.Value.ToString("dd-MMM-yyyy") : "—"))</MudText>
    </MudItem>

    <MudItem xs="12" sm="4" Class="field-block">
        <MudText Typo="Typo.subtitle2" Color="_labelColor">Inv Amount</MudText>
        <MudText Typo="Typo.body1" Color="Color.Info">@CurrencyFormatter.Format(InvoiceValue)</MudText>
    </MudItem>

    <MudItem xs="12" sm="4" Class="field-block">
            <MudText Typo="Typo.subtitle2" Color="_labelColor">Tax Amount</MudText>
        <MudText Typo="Typo.body1" Color="Color.Info">@CurrencyFormatter.Format(InvoiceTaxValue)</MudText>
    </MudItem>

    <MudItem xs="12" sm="4" Class="field-block">
        <MudText Typo="Typo.subtitle2" Color="_labelColor">Invoice Total</MudText>
        <MudText Typo="Typo.body1" Color="Color.Warning">@CurrencyFormatter.Format(InvoiceTotalValue)</MudText>
    </MudItem>
        <MudItem xs="12" sm="4" Class="field-block">
            <MudText Typo="Typo.subtitle2" Color="_labelColor">Prev Reviewer</MudText>
            <MudText Typo="Typo.body1" Color="Color.Info">@PrevReviewerName</MudText>
        </MudItem>
        <MudItem xs="12" sm="4" Class="field-block">
            <MudText Typo="Typo.subtitle2" Color="_labelColor">Approved Amount</MudText>
            <MudText Typo="Typo.body1" Color="Color.Info">@CurrencyFormatter.Format(PrevApprovedAmount)</MudText>
        </MudItem>
        <MudItem xs="12" sm="4" Class="field-block">
            <MudText Typo="Typo.subtitle2" Color="_labelColor">Withheld Amount</MudText>
            <MudText Typo="Typo.body1" Color="Color.Info">@CurrencyFormatter.Format(PrevWithheldAmount)</MudText>
        </MudItem>
</MudGrid>
</MudPaper>
@code {
    [Parameter] public string? InvoiceRefNo { get; set; }
    [Parameter] public DateTime? InvoiceDate { get; set; }
    [Parameter] public decimal? InvoiceValue { get; set; }
    [Parameter] public decimal? InvoiceTaxValue { get; set; }
    [Parameter] public decimal? InvoiceTotalValue { get; set; }
    [Parameter] public string? PrevReviewerName { get; set; }
    [Parameter] public decimal? PrevApprovedAmount { get; set; }
    [Parameter] public decimal? PrevWithheldAmount { get; set; }

    private Variant _variant = Variant.Text;
    private Margin _margin = Margin.Dense;
    private Color _labelColor = Color.Default;
}
